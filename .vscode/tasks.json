{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build",
            "type": "shell",
            "command": "g++",
            "args": [
                "-g",
                "${workspaceFolder}/main.cpp",
                "${workspaceFolder}/Baralho/Baralho.cpp",
                "${workspaceFolder}/Cartas/Carta.cpp",
                "${workspaceFolder}/Jogador/Jogador.cpp",
                "-o",
                "${workspaceFolder}/output/main.exe"
            ],
            "presentation": {
                "echo": true,
                "reveal": "always",
                "panel": "shared"
            },
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": [
                "$gcc"
            ]
        }
    ]
}